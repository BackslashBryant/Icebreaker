# Frontend Environment Variables
# Copy this file to .env.local and update the values

# Application
NEXT_PUBLIC_APP_NAME=My App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_API_TIMEOUT=5000

# Authentication
NEXT_PUBLIC_AUTH_DOMAIN=your-auth-domain.com
NEXT_PUBLIC_AUTH_CLIENT_ID=your-client-id
NEXT_PUBLIC_AUTH_AUDIENCE=your-audience

# Database (if using client-side database)
NEXT_PUBLIC_DATABASE_URL=your-database-url

# External Services
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-key

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_PWA=false

# Development
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_MOCK_API=false

# Build Configuration
NEXT_PUBLIC_BUILD_ID=local
NEXT_PUBLIC_BUILD_TIME=2024-01-01T00:00:00Z
