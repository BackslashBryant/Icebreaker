{
  "name": "icebreaker",
  "version": "0.1.0",
  "private": true,
  "description": "Icebreaker - A proximity-based ephemeral chat application for connecting people nearby",
  "scripts": {
    "preflight": "node ./tools/preflight.mjs",
    "check:dependencies": "node ./tools/check-dependencies.mjs",
    "mcp:suggest": "node ./tools/mcp-suggest.mjs",
    "mcp:heal": "node ./tools/mcp-self-heal.mjs",
    "mcp:test-connectivity": "node ./tools/test-mcp-connectivity.mjs",
    "verify": "node ./scripts/verify-all",
    "agents:install-hook": "node ./tools/install-agent-hook.mjs",
    "agents:prompt": "node ./tools/agent-prompts.mjs",
    "github:issue": "node ./tools/github-issue.mjs",
    "github:pr": "node ./tools/github-pr.mjs",
    "github:labels": "node ./tools/github-labels.mjs",
    "github:complete": "node ./tools/github-issue-complete.mjs",
    "git:push": "node ./tools/git-push-with-retry.mjs",
    "cursor:extensions": "node ./tools/cursor-extensions.mjs",
    "status": "node ./tools/health-check.mjs",
    "setup": "node ./tools/setup.mjs",
    "setup:tokens": "node ./tools/token-wizard.mjs",
    "mcp:load-env": "node ./tools/load-env-to-system.mjs",
    "mcp:load-env:win": "powershell -ExecutionPolicy Bypass -File ./tools/load-env-to-system.ps1",
    "github:sync-token": "powershell -ExecutionPolicy Bypass -File ./tools/sync-github-token.ps1",
    "setup:agents": "node ./tools/agent-helper.mjs",
    "setup:extensions": "node ./tools/cursor-extensions.mjs",
    "setup:cursor": "node ./tools/cursor-settings-gen.mjs",
    "detect": "node ./tools/detection.mjs",
    "brains:refresh": "node ./tools/brains-refresh.mjs",
    "personal:bootstrap": "node ./tools/personal-bootstrap.mjs",
    "feature:new": "node ./tools/feature-new.mjs",
    "preset:webapp": "node ./tools/preset-webapp.mjs",
    "postinstall": "node ./tools/postinstall-check.mjs",
    "convert:app": "node ./tools/convert-to-app.mjs",
    "test:personas": "node ./tools/test-persona-activation.mjs",
    "github:init": "node ./tools/github-init-issues.mjs",
    "dev:guarded": "node ./tools/dev-guarded.mjs",
    "ports:free": "bash ops/cleanup/kill-ports.sh",
    "ports:free:win": "powershell -ExecutionPolicy Bypass -File ops/cleanup/kill-ports.ps1",
    "ports:free:smart": "powershell -ExecutionPolicy Bypass -File ops/cleanup/kill-processes-smart.ps1",
    "ports:free:smart:dry": "powershell -ExecutionPolicy Bypass -File ops/cleanup/kill-processes-smart.ps1 -DryRun",
    "ports:status": "node ./tools/ports-status.mjs",
    "guard:lint": "node ./tools/guard-runner.mjs lint",
    "guard:type": "node ./tools/guard-runner.mjs type",
    "test": "node ./tools/guard-runner.mjs test",
    "test:unit": "node ./scripts/run-tests.mjs",
    "test:security": "cd backend && npm run test -- tests/security.test.js",
    "test:e2e": "cd tests && npm test",
    "test:performance": "cd tests && npm test -- performance.spec.ts",
    "test:all": "node ./scripts/run-tests.mjs && npm run test:security",
    "docs:audit": "node ./tools/docs-audit.mjs"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0"
  }
}
