{
  "mcpServers": {
    "github": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-github@latest"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${inputs.github_pat}"
      }
    },
    "supabase": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@supabase/mcp-server-supabase@latest",
        "--read-only"
      ],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "${inputs.supabase_pat}",
        "SUPABASE_PROJECT_REF": "${inputs.supabase_project_ref}"
      }
    },
    "playwright": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@playwright/mcp@latest"
      ],
      "env": {
        "PLAYWRIGHT_BROWSERS_PATH": "${inputs.playwright_browsers_path}"
      }
    },
    "docfork": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "docfork@latest"
      ]
    },
    "desktop-commander": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@wonderwhy-er/desktop-commander@latest"
      ]
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "github_pat",
      "description": "GitHub Personal Access Token",
      "password": true
    },
    {
      "type": "promptString",
      "id": "supabase_pat",
      "description": "Supabase Personal Access Token",
      "password": true
    },
    {
      "type": "promptString",
      "id": "supabase_project_ref",
      "description": "Supabase Project Ref (optional)",
      "password": false
    },
    {
      "type": "promptString",
      "id": "playwright_browsers_path",
      "description": "Playwright browsers path (optional)",
      "password": false
    }
  ]
}